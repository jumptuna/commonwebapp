<% @x = 0 %>
<% @users.each do |user| %>
	<% @x+=1 %>
	<div class = "col-sm-3 people">
    <p>
       <%= link_to image_tag user.avatar.url.to_s, {:action => "profile", :class => "display", :id => @x} %>
       <div class = "col-sm-12">
       </div>
       <%= link_to user.name.html_safe, { :action => "profile", :id => @x }%>
    </p>
    </div>
<% end %>
